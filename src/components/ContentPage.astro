---
const { title, updated } = Astro.props as {
  title: string;
  updated?: string;
};
---
<section class="section-padding" style="background-color: var(--color-alabaster);">
  <div class="container-blog max-w-4xl">
    <article class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
      <h1 class="text-4xl font-heading font-bold mb-8" style="color: var(--color-forest-green);">
        {title}
      </h1>

      {updated && (
        <p class="text-xl mb-8 pb-8" style="color: var(--color-slate-grey); border-bottom: 1px solid var(--color-warm-taupe);">
          <strong>Last Updated:</strong> {updated}
        </p>
      )}

      <div class="prose prose-lg max-w-none" style="color: var(--color-slate-grey);">
        <slot />
      </div>
    </article>
  </div>
</section>
