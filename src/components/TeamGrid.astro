---
import type { TeamMember } from '../data/about';
const { members } = Astro.props as { members: TeamMember[] };
---
<section class="section-padding bg-gray-50">
  <div class="container-blog">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-heading font-bold text-gray-900 mb-4">Meet Our Team</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Pet lovers, experts, and advocates dedicated to helping you and your furry friends.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {members.map(member => (
        <article class="bg-white rounded-2xl p-6 text-center shadow-lg hover:shadow-xl transition-shadow">
          <img
            src={member.image}
            alt={member.name}
            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
          />
          <h3 class="font-semibold text-gray-900 text-lg">{member.name}</h3>
          <p class="text-primary font-medium text-sm mb-3">{member.role}</p>
          <p class="text-gray-600 text-sm">{member.bio}</p>
        </article>
      ))}
    </div>
  </div>
</section>
