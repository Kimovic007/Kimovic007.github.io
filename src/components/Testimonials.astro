---
const testimonials = [
  {
    name: 'Sarah M.',
    image: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=100&h=100&fit=crop',
    text: 'The product recommendations on Pet Care Blog saved me so much time! Found the perfect food for my picky eater.',
    rating: 5,
    pet: 'Dog Owner'
  },
  {
    name: 'James K.',
    image: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop',
    text: 'Finally, honest reviews I can trust! The training tips helped me bond better with my new puppy.',
    rating: 5,
    pet: 'Puppy Parent'
  },
  {
    name: 'Emily R.',
    image: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100&h=100&fit=crop',
    text: 'Best pet care resource online. The nutrition guides helped my cat lose weight healthily.',
    rating: 5,
    pet: 'Cat Lover'
  }
];
---

<section class="section-padding" style="background-color: white;">
  <div class="container-blog">
    <div class="text-center mb-12">
      <span class="font-semibold text-sm uppercase tracking-wide" style="color: var(--color-champagne);">Testimonials</span>
      <h2 class="text-3xl md:text-4xl font-heading font-bold mt-2 mb-4" style="color: var(--color-forest-green);">
        Trusted by Pet Parents Everywhere
      </h2>
      <p class="max-w-2xl mx-auto" style="color: var(--color-slate-grey);">
        Join thousands of pet owners who rely on our expert advice and product recommendations.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow" style="border: 1px solid var(--color-alabaster);">
          <!-- Stars -->
          <div class="flex mb-4" style="color: var(--color-champagne);">
            {Array(testimonial.rating).fill(null).map(() => (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          
          <!-- Quote -->
          <p class="text-gray-700 mb-6 italic">"{testimonial.text}"</p>
          
          <!-- Author -->
          <div class="flex items-center gap-4">
            <img 
              src={testimonial.image} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover"
              loading="lazy"
            />
            <div>
              <p class="font-semibold text-gray-900">{testimonial.name}</p>
              <p class="text-sm text-gray-500">{testimonial.pet}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Trust Badges -->
    <div class="mt-16 pt-12 border-t border-gray-200">
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        <div class="text-center">
          <p class="text-4xl font-bold text-primary">50K+</p>
          <p class="text-sm text-gray-600">Monthly Readers</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-primary">200+</p>
          <p class="text-sm text-gray-600">Expert Articles</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-primary">4.9</p>
          <p class="text-sm text-gray-600">Average Rating</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-primary">5+</p>
          <p class="text-sm text-gray-600">Years Experience</p>
        </div>
      </div>
    </div>
  </div>
</section>
