---
import type { Category } from '../data/home';
const { items } = Astro.props as { items: Category[] };
---
<section class="section-padding bg-white">
  <div class="container-blog">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4" style="color: var(--color-forest-green);">
        Explore Pet Care Topics
      </h2>
      <p class="max-w-2xl mx-auto" style="color: var(--color-slate-grey);">
        From nutrition to training, find expert guidance on every aspect of pet care.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
      {items.map(category => (
        <a
          href={category.href || `/tag/${category.slug}`}
          class="group p-6 bg-white rounded-2xl border hover:shadow-xl transition-all text-center"
          style="border-color: var(--color-warm-taupe);"
        >
          <div class={`w-16 h-16 bg-gradient-to-br ${category.color} rounded-2xl flex items-center justify-center mx-auto mb-4 text-3xl shadow-lg group-hover:scale-110 transition-transform`}>
            {category.icon}
          </div>
          <h3 class="font-semibold mb-1 transition-colors" style="color: var(--color-forest-green);">
            {category.name}
          </h3>
          <p class="text-sm" style="color: var(--color-warm-taupe);">{category.count} articles</p>
        </a>
      ))}
    </div>
  </div>
</section>
