---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getTagCategory, getAllTags, getUniqueTags, isCategoryTag, getCategoryTags, TAG_CATEGORIES } from '../../utils/tags';
import ArticleCard from '../../components/ArticleCard.astro';

export async function getStaticPaths() {
  // Get all posts to extract content tags
  const dogsPosts = await getCollection('dogs');
  const catsPosts = await getCollection('cats');
  const productsPosts = await getCollection('products-reviews');
  const allPosts = [...dogsPosts, ...catsPosts, ...productsPosts];
  
  // Combine predefined tags with tags from actual content
  const predefinedTags = getAllTags();
  const contentTags = getUniqueTags(allPosts);
  
  // Also add category names as valid routes (e.g., "training", "nutrition")
  const categoryNames = Object.keys(TAG_CATEGORIES).map(c => c.toLowerCase());
  
  const allTags = [...new Set([
    ...predefinedTags.map(t => t.toLowerCase()), 
    ...contentTags,
    ...categoryNames
  ])];
  
  return allTags.map(tag => ({
    params: { tag: tag.toLowerCase() },
    props: { tag },
  }));
}

interface Props {
  tag: string;
}

const { tag } = Astro.props;

// Check if this tag is actually a category name (e.g., "training" -> Training category)
const categoryMatch = isCategoryTag(tag);
const tagCategory = categoryMatch || getTagCategory(tag);

// Get all posts
const dogsPosts = await getCollection('dogs');
const catsPosts = await getCollection('cats');
const productsPosts = await getCollection('products-reviews');
const allPosts = [
  ...dogsPosts.map(post => ({ post, collection: 'dogs' as const })),
  ...catsPosts.map(post => ({ post, collection: 'cats' as const })),
  ...productsPosts.map(post => ({ post, collection: 'products-reviews' as const })),
];

// Filter posts - if this is a category, match ANY tag in that category
let filteredPosts;
if (categoryMatch) {
  // Category-level filtering: match any tag in the category
  const categoryTags = getCategoryTags(categoryMatch).map(t => t.toLowerCase());
  filteredPosts = allPosts.filter(({ post }) =>
    post.data.tags.some(t => categoryTags.includes(t.toLowerCase()))
  );
} else {
  // Exact tag filtering
  filteredPosts = allPosts.filter(({ post }) =>
    post.data.tags.some(t => t.toLowerCase() === tag.toLowerCase())
  );
}

// Sort by date descending
filteredPosts.sort((a, b) => 
  new Date(b.post.data.pubDate).getTime() - new Date(a.post.data.pubDate).getTime()
);

// Display name: use category name if it's a category, otherwise capitalize the tag
const displayName = categoryMatch || tag;
---

<BaseLayout
  title={`${displayName} | Pet Care Blog`}
  description={categoryMatch 
    ? `Browse all ${displayName} articles. Find helpful guides and tips for your pets.`
    : `Browse all pet care articles tagged with ${tag}. Find helpful guides and tips for your pets.`}
  type="website"
>
  <div class="min-h-screen" style="background-color: var(--color-alabaster);">
    <!-- Hero Section -->
    <section class="py-12 md:py-20" style="background-color: var(--color-forest-green);">
      <div class="container-blog">
        <div class="flex items-center gap-4 mb-6">
          <a
            href="/tags"
            class="transition-colors"
            style="color: var(--color-alabaster); opacity: 0.8;"
          >
            ‚Üê All Tags
          </a>
        </div>
        <div>
          <p class="text-lg mb-3" style="color: var(--color-alabaster); opacity: 0.8;">
            {categoryMatch ? 'Category' : (tagCategory ? `${tagCategory} / Tagged with` : 'Tagged with')}
          </p>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold text-white mb-6 capitalize">
            {displayName}
          </h1>
          <p class="text-xl md:text-2xl" style="color: var(--color-alabaster); opacity: 0.9;">
            {filteredPosts.length} {filteredPosts.length === 1 ? 'article' : 'articles'} found
          </p>
        </div>
      </div>
    </section>

    <!-- Articles Section -->
    <section class="py-16 md:py-24">
      <div class="container-blog">
        {filteredPosts.length === 0 ? (
          <div class="text-center py-16">
            <p class="text-xl mb-8" style="color: var(--color-warm-taupe);">No articles found with this tag.</p>
            <a
              href="/tags"
              class="inline-block px-6 py-3 text-white font-semibold rounded-lg transition-colors"
              style="background-color: var(--color-forest-green);"
            >
              Browse All Tags
            </a>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {filteredPosts.map(({ post, collection }) => (
              <ArticleCard
                title={post.data.title}
                description={post.data.description}
                image={post.data.heroImage}
                imageAlt={post.data.heroImageAlt}
                slug={post.slug}
                tags={post.data.tags}
                pubDate={post.data.pubDate}
                author={post.data.author}
                readingTime={post.data.readingTime}
                featured={post.data.featured || false}
              />
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- Related Tags Section -->
    {filteredPosts.length > 0 && (
      <section class="py-16 md:py-24" style="background-color: white;">
        <div class="container-blog">
          <h2 class="text-3xl font-heading font-bold mb-8" style="color: var(--color-forest-green);">
            Related Tags
          </h2>
          <div class="flex flex-wrap gap-3">
            {Array.from(
              new Set(
                filteredPosts
                  .flatMap(({ post }) => post.data.tags)
                  .filter(t => t.toLowerCase() !== tag.toLowerCase())
              )
            )
              .sort()
              .slice(0, 12)
              .map(relatedTag => (
                <a
                  href={`/tag/${relatedTag.toLowerCase()}`}
                  class="px-4 py-2 bg-white border-2 rounded-full text-sm transition-colors capitalize"
                  style="border-color: var(--color-warm-taupe); color: var(--color-slate-grey);"
                >
                  {relatedTag}
                </a>
              ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="py-16 md:py-24" style="background-color: var(--color-forest-green);">
      <div class="container-blog text-center">
        <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-6">
          Explore More Topics
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto" style="color: var(--color-alabaster); opacity: 0.9;">
          Discover articles on other topics to enhance your pet care knowledge.
        </p>
        <a
          href="/tags"
          class="inline-block px-8 py-3 font-semibold rounded-lg transition-colors"
          style="background-color: var(--color-champagne); color: var(--color-forest-green);"
        >
          View All Tags
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
